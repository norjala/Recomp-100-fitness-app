{
  "extends": "./tsconfig.json",
  "include": ["server/**/*", "shared/**/*", "scripts/**/*"],
  "exclude": ["client/**/*", "node_modules", "build", "dist", "**/*.test.ts", "vite.config.ts", "server/vite.ts"],
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "jsx": "react-jsx",
    "lib": ["esnext"],
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./shared/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true
  }
}