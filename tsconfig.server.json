{
  "include": ["server/**/*", "shared/**/*"],
  "exclude": ["client/**/*", "node_modules", "build", "dist", "**/*.test.ts", "vite.config.ts", "server/vite.ts"],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo-server",
    "noEmit": false,
    "outDir": "dist",
    "target": "es2022",
    "module": "Node16",
    "strict": true,
    "lib": ["esnext"],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "Node16",
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@shared/*": ["./shared/*"]
    },
    "resolveJsonModule": true
  }
}